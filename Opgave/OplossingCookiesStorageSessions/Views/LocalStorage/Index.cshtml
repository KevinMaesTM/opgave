<h1>Sessions</h1>
<br />
<h2>Sessions aanmaken</h2>
<form method="post">
    <div class="form-group">
        <label for="key">Item key:</label>
        <input type="text" id="key" name="Key" class="form-control" />
    </div>
    <div class="form-group">
        <label for="value">Item value:</label>
        <input type="text" id="value" name="Value" class="form-control" />
    </div>
    <button type="submit" class="btn btn-dark">Add Storage Item</button>
</form>
<br />
<!-- Verwijder item op basis van key -->
<h2>Sessions verwijderen</h2>
<form method="post">
    <div class="form-group">
        <label for="remove-key">Key:</label>
        <input type="text" id="remove-key" name="key" class="form-control" />
    </div>
    <button type="submit" class="btn btn-dark">Remove Storage Item</button>
</form>
<br />
<!-- Toon items -->
<h2>Resultaat</h2>
<div id="items"></div>

